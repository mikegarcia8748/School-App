<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.School_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLight</item>
        <item name="colorOnPrimary">@color/material_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/material_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_default_color</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background_light</item>
    </style>

    <style name="Theme.School_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.School_App.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight"/>

    <style name="Theme.School_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">

<!--        <item name="android:actionMenuTextColor">@color/toolbarTextColorLight</item>-->

    </style>

    <style name="TransparentToolbar" parent="Theme.School_App.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.School_App.TextInputContainer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Theme.School_App.TextInput">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.School_App.TextInputAutoComplete">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:padding">15dp</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    <style name="Theme.School_App.HeaderLabel">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>